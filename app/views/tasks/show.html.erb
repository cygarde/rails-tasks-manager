<h1><%= @task.title %></h1>

<h2><%= @task.details %></h2>

<% if @task.completed? %>
<div>
<i class="far fa-check-square"></i>
<span>this task is completed </span>
</div>
<% else %>
<div>
<i class="far fa-square"></i>
<span>this task is not completed yet</span>
</div>
<% end %>


<%= link_to "Edit this task", edit_task_path %>

<%= link_to "back to list", tasks_path %>
